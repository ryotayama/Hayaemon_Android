<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    >
    <RelativeLayout
        android:id="@+id/relativeDialogSpeed"
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/viewSepDialogSpeed"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"
            />
        <Button
            android:id="@+id/btnMinus10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10%"
            android:textColor="@drawable/btn_text"
            android:textSize="15dp"
            android:minWidth="0dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@null"
            android:layout_below="@+id/viewSepDialogSpeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/btnPlus10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10%"
            android:textColor="@drawable/btn_text"
            android:textSize="15dp"
            android:minWidth="0dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@null"
            android:layout_below="@+id/viewSepDialogSpeed"
            android:layout_toRightOf="@+id/btnMinus10"
            android:layout_toEndOf="@+id/btnMinus10"
            />
        <Button
            android:id="@+id/btnResetDialogSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:textColor="@drawable/btn_text"
            android:textSize="15dp"
            android:minWidth="0dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@null"
            android:layout_below="@+id/viewSepDialogSpeed"
            android:layout_toLeftOf="@+id/btnDoneDialogSpeed"
            android:layout_toStartOf="@+id/btnDoneDialogSpeed"
            />
        <Button
            android:id="@+id/btnDoneDialogSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/done"
            android:textColor="@drawable/btn_text"
            android:textSize="15dp"
            android:minWidth="0dp"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@null"
            android:layout_below="@+id/viewSepDialogSpeed"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeDialogSpeed"
        >

        <NumberPicker
            android:id="@+id/intSpeedPicker1"
            android:background="#DDD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <NumberPicker
            android:id="@+id/intSpeedPicker2"
            android:background="#DDD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <NumberPicker
            android:id="@+id/intSpeedPicker3"
            android:background="#DDD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <NumberPicker
                android:id="@+id/intSpeedPicker4"
                android:background="#DDD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="."
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <NumberPicker
            android:id="@+id/decSpeedPicker"
            android:background="#DDD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>
</RelativeLayout>