<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeHideAdsScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <RelativeLayout
        android:id="@+id/relativeHideAdsTitle"
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textHideAdsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hideAdsTitle"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/btnCloseHideAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="#007AFF"
            android:textSize="15dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <View
        android:id="@+id/viewSepHideAds"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_below="@+id/relativeHideAdsTitle"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSepHideAds"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="48dp"
        >

        <TextView
            android:id="@+id/textHideAdsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hideAdsDescription"
            android:textSize="13sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <View
            android:id="@+id/viewSepHideAdsHeader"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"
            android:layout_below="@+id/textHideAdsHeader"
            />

        <RelativeLayout
            android:id="@+id/relativePurchaseOnce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_below="@id/viewSepHideAdsHeader"
            >

            <TextView
                android:id="@+id/textPurchaseOncePlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchaseOncePlanTitle"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/textPurchaseOncePlanDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purchaseOncePlanDescription"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textPurchaseOncePlan"
                />

            <Button
                android:id="@+id/btnPurchaseOnce"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:text="@string/purchase"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:background="@drawable/itempurchase"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="12"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textPurchaseOncePlanDescription"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btnRestoreOnce"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/restorePurchase"
                android:textColor="#007AFF"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnPurchaseOnce"
                android:textAllCaps="false"
                />

        </RelativeLayout>

        <View
            android:id="@+id/viewSepHideAdsOnceBottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BFBFBF"
            android:layout_below="@+id/relativePurchaseOnce"
            />

        <RelativeLayout
            android:id="@+id/relativePurchaseContinuous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_below="@id/viewSepHideAdsOnceBottom"
            >

            <TextView
                android:id="@+id/textPurchaseContinuousPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchaseContinuousPlanTitle"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/textPurchaseContinuousPlanDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purchaseContinuousPlanDescription"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textPurchaseContinuousPlan"
                />

            <Button
                android:id="@+id/btnPurchaseContinuous"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:text="@string/purchase"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:background="@drawable/itempurchase"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="12"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textPurchaseContinuousPlanDescription"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btnRestoreContinuous"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="@string/restorePurchase"
                android:textColor="#007AFF"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnPurchaseContinuous"
                android:textAllCaps="false"
                />

        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>
