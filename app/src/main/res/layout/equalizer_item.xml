<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/equalizerItem"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    >

    <TextView
        android:id="@+id/textEqualizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/relativeEqualizerMenu"
        android:layout_toStartOf="@+id/relativeEqualizerMenu"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:id="@+id/relativeEqualizerMenu"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/imgEqualizerMenu"
            android:contentDescription="@string/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_listmenu"
            android:scaleType="centerInside"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
