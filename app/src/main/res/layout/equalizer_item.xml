<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/equalizerItem"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    >

    <TextView
        android:id="@+id/textEqualizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imgEqualizerMenu"
        android:layout_toStartOf="@+id/imgEqualizerMenu"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgEqualizerMenu"
        android:contentDescription="@string/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_button_more"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
