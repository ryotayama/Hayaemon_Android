<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/songItem"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    >
    
    <ImageView
        android:id="@+id/imgSelectSong"
        android:contentDescription="@string/select"
        android:src="@drawable/ic_button_check_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginEnd="-4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textNumber"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_toRightOf="@+id/imgSelectSong"
        android:layout_toEndOf="@+id/imgSelectSong"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgStatus"
        android:contentDescription="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@+id/imgSelectSong"
        android:layout_toEndOf="@+id/imgSelectSong"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textNumber"
        android:layout_toEndOf="@id/textNumber"
        android:layout_toLeftOf="@+id/imgLock"
        android:layout_toStartOf="@+id/imgLock"
        />

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#666666"
        android:singleLine="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textNumber"
        android:layout_toEndOf="@id/textNumber"
        android:layout_toLeftOf="@+id/imgLock"
        android:layout_toStartOf="@+id/imgLock"
        />

    <ImageView
        android:id="@+id/imgLock"
        android:contentDescription="@string/restoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_playlist_lock"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textTime"
        android:layout_toStartOf="@+id/textTime"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:textSize="11dp"
        android:textColor="#000"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/imgSongMenu"
        android:layout_toStartOf="@+id/imgSongMenu"
        />

    <ImageView
        android:id="@+id/imgSongMenu"
        android:contentDescription="@string/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_button_more"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
