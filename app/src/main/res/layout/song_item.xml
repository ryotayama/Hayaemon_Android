<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/songItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    
    <ImageView
        android:id="@+id/imgSelectSong"
        android:contentDescription="@string/select"
        android:src="@drawable/ic_button_check_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginRight="-4dp"
        android:layout_marginEnd="-4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textNumber"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_toRightOf="@+id/imgSelectSong"
        android:layout_toEndOf="@+id/imgSelectSong"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgStatus"
        android:contentDescription="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@+id/imgSelectSong"
        android:layout_toEndOf="@+id/imgSelectSong"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textNumber"
        android:layout_toEndOf="@id/textNumber"
        android:layout_toLeftOf="@+id/imgLock"
        android:layout_toStartOf="@+id/imgLock"
        />

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textColor="#666666"
        android:singleLine="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textNumber"
        android:layout_toEndOf="@id/textNumber"
        android:layout_toLeftOf="@+id/imgLock"
        android:layout_toStartOf="@+id/imgLock"
        />

    <ImageView
        android:id="@+id/imgLock"
        android:contentDescription="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_listlock"
        android:scaleType="centerInside"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/frameSongMenu"
        android:layout_toStartOf="@+id/frameSongMenu"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/frameSongMenu"
        android:layout_width="42dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        >

        <ImageView
            android:id="@+id/imgSongMenu"
            android:contentDescription="@string/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_listmenu"
            android:scaleType="centerInside"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
