<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp"
    >
    <TextView
        android:id="@+id/textSpeed"
        android:text="速度:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_alignBaseline="@id/btnResetSpeed"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <requestFocus/>
    </TextView>
    <EditText
        android:id="@+id/textSpeedValue"
        android:text="100.0%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnResetSpeed"
        android:layout_toRightOf="@id/textSpeed"
        />
    <ImageButton
        android:id="@+id/btnLockSpeed"
        android:contentDescription="速度をロック"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@null"
        android:src="@drawable/ic_control_unlock"
        android:scaleType="centerInside"
        android:layout_marginRight="8dp"
        android:layout_marginVertical="8dp"
        android:layout_alignTop="@id/btnResetSpeed"
        android:layout_alignParentRight="true"
        android:clickable="true"
        />
    <Button
        android:id="@+id/btnResetSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_alignParentTop="true"
        android:text="リセット"
        android:layout_toLeftOf="@+id/btnLockSpeed"
        android:clickable="true"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BFBFBF"
        android:layout_below="@+id/btnResetSpeed"
        />
    <TextView
        android:id="@+id/textPitch"
        android:text="音程:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_alignBaseline="@id/btnResetPitch"
        />
    <EditText
        android:id="@+id/textPitchValue"
        android:text="　0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnResetPitch"
        android:layout_alignLeft="@+id/textSpeedValue"
        android:layout_alignRight="@+id/textSpeedValue"
        />
    <ImageButton
        android:id="@+id/btnLockPitch"
        android:contentDescription="音程をロック"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@null"
        android:src="@drawable/ic_control_unlock"
        android:scaleType="centerInside"
        android:layout_marginRight="8dp"
        android:layout_marginVertical="8dp"
        android:layout_alignTop="@id/btnResetPitch"
        android:layout_alignParentRight="true"
        android:clickable="true"
        />
    <Button
        android:id="@+id/btnResetPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text="リセット"
        android:layout_toLeftOf="@+id/btnLockPitch"
        android:clickable="true"
        android:gravity="center"
        android:layout_below="@id/btnResetSpeed"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BFBFBF"
        android:layout_below="@+id/btnResetPitch"
        />
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_below="@id/btnResetPitch"
        >
        <View
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"
            android:layout_toRightOf="@+id/btnSpeedDown"
            android:layout_toLeftOf="@+id/btnSpeedUp"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            />
        <View
            android:id="@+id/line2"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/btnPitchUp"
            android:layout_above="@+id/btnPitchDown"
            android:layout_centerHorizontal="true"
            android:layout_margin="0dp"
            />
        <View
            android:id="@+id/imgBack"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:padding="0dp"
            android:layout_below="@+id/btnPitchUp"
            android:layout_above="@+id/btnPitchDown"
            android:layout_toRightOf="@+id/btnSpeedDown"
            android:layout_toLeftOf="@+id/btnSpeedUp"
            android:layout_margin="0dp"
            />
        <ImageView
            android:id="@+id/imgPoint"
            android:src="@drawable/ic_point"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            />
        <com.edolfzoku.hayaemon2.AnimationButton
            android:id="@+id/btnSpeedUp"
            android:contentDescription="速度を上げる"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/control_speed_up_jp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:longClickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <com.edolfzoku.hayaemon2.AnimationButton
            android:id="@+id/btnSpeedDown"
            android:contentDescription="速度を下げる"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/control_speed_down_jp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:longClickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <com.edolfzoku.hayaemon2.AnimationButton
            android:id="@+id/btnPitchUp"
            android:contentDescription="音程を上げる"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/control_pitch_sharp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:longClickable="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
        <com.edolfzoku.hayaemon2.AnimationButton
            android:id="@+id/btnPitchDown"
            android:contentDescription="音程を下げる"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/control_pitch_flat"
            android:scaleType="centerInside"
            android:clickable="true"
            android:longClickable="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>
