<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlistItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="タイトル"
        android:textSize="13dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_marginLeft="14dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textSongCount"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textSongCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0曲"
        android:textSize="13dp"
        android:textColor="#666666"
        android:singleLine="true"
        android:layout_marginHorizontal="8dp"
        android:layout_toLeftOf="@+id/imgRight"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_listright"
        android:scaleType="centerInside"
        android:layout_marginRight="8dp"
        android:layout_marginVertical="6dp"
        android:layout_toLeftOf="@+id/framePlaylistMenu"
        android:layout_centerVertical="true"
        />

    <FrameLayout
        android:id="@+id/framePlaylistMenu"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:id="@+id/imgPlaylistMenu"
            android:contentDescription="メニュー"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_listmenu"
            android:scaleType="centerInside"
            android:layout_marginRight="12dp"
            android:layout_marginVertical="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
