<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlistItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textSongCount"
        android:layout_toStartOf="@+id/textSongCount"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/textSongCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#666666"
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/imgRight"
        android:layout_toStartOf="@+id/imgRight"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/imgRight"
        android:contentDescription="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@null"
        android:src="@drawable/ic_listright"
        android:scaleType="centerInside"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toLeftOf="@+id/framePlaylistMenu"
        android:layout_toStartOf="@+id/framePlaylistMenu"
        android:layout_centerVertical="true"
        />

    <FrameLayout
        android:id="@+id/framePlaylistMenu"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/imgPlaylistMenu"
            android:contentDescription="@string/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:src="@drawable/ic_listmenu"
            android:scaleType="centerInside"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#BFBFBF"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
